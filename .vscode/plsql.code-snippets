            "   select count(*) into l_cnt from user_tables where table_name = upper('$1:table_name');",
            "",
            "   if (l_cnt > 0) then",
            "      execute immediate 'drop table $1:table_name cascade constraints purge';",
            "   end if;",
            "end;",
